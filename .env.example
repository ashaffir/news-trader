# News Trader Environment Variables Template
# Copy this file to .env and fill in your values

# ============================================
# Django Configuration
# ============================================
# SECURITY WARNING: Generate a new secret key for production!
# You can generate one at: https://djecrety.ir/
SECRET_KEY=django-insecure-change-me-in-production

# Debug mode - ALWAYS set to False in production
DEBUG=False

# Allowed hosts - add your domain names
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,your-domain.com

# ============================================
# Database Configuration
# ============================================
# For Docker deployment (PostgreSQL)
DATABASE_URL=postgresql://news_trader:news_trader@db:5432/news_trader

# ============================================
# Redis Configuration (for Celery)
# ============================================
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ============================================
# Trading API Keys
# ============================================
# Alpaca Trading API - Get from: https://alpaca.markets/
ALPACA_API_KEY=your-alpaca-api-key-here
ALPACA_SECRET_KEY=your-alpaca-secret-key-here

# Trading environment: paper (for testing) or live (for real trading)
ALPACA_BASE_URL=https://paper-api.alpaca.markets

# ============================================
# AI/LLM Configuration
# ============================================
# OpenAI API Key - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# ============================================
# News Source API Keys
# ============================================
# NewsAPI - Get from: https://newsapi.org/
NEWSAPI_KEY=your-newsapi-key-here

# AlphaVantage - Get from: https://www.alphavantage.co/
ALPHAVANTAGE_API_KEY=your-alphavantage-key-here

# Reddit User Agent - Format: AppName/Version
REDDIT_USER_AGENT=YourAppName/1.0

# ============================================
# Chrome/Selenium Configuration (Docker)
# ============================================
# These are set automatically in Docker, no need to change
CHROME_BIN=/usr/bin/chromium
CHROME_PATH=/usr/bin/chromium
DISPLAY=:99

# ============================================
# Optional: Production Security Settings
# ============================================
# Uncomment and set these for production deployment

# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True
# SECURE_CONTENT_TYPE_NOSNIFF=True
# SECURE_BROWSER_XSS_FILTER=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True

# ============================================
# Optional: Custom Configuration
# ============================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Time zone
TZ=UTC

# ============================================
# Instructions:
# ============================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual API keys and values
# 3. For production: Set DEBUG=False and use strong SECRET_KEY
# 4. Never commit .env file to version control
# 5. Ensure all required API keys are obtained and valid
